default:
    @just --list

# Run a flow
run example:
    uv run flows/{{example}}.py run

# Run all flows
run-all:
    uv run flows/parallel_tasks.py run
    uv run flows/data_pipeline.py run
    uv run flows/conditional_branching.py run

# Note: Metaflow UI requires deploying a separate service (metaflow-ui)
# See: https://github.com/Netflix/metaflow-ui
